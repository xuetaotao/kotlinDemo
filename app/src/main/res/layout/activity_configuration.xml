<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_screen_orientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_control_orientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_touch_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fontScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_getCfg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="获取手机信息"
                android:textColor="@color/common_black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_setOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="修改屏幕方向"
                android:textColor="@color/common_black"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>