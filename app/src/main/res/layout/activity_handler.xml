<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_button"
        android:gravity="center"
        android:padding="15dp"
        android:text="下面是子线程计算质数："
        android:textColor="@color/common_black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入一个数值"
        android:inputType="number"
        android:textColor="@color/common_blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="计算结果展示"
        android:textColor="@color/common_black"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_blue_button"
        android:onClick="calPrimeNum"
        android:text="子线程Handler计算质数"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_blue_button"
        android:onClick="handlerThreadStudy"
        android:text="HandlerThread"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_blue_button"
        android:onClick="takeTurnsImage"
        android:text="轮流播放图片"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_blue_button"
        android:onClick="handlerPostMethod"
        android:text="handler的Post方法"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>